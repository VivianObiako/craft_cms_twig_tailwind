{% extends "_globals/session" %}

{%- block layout -%}
<!DOCTYPE html>
<html lang="{{ craft.app.language|slice(0, 2) }}" x-data="{ darkMode: localStorage.getItem('dark') === 'true'} " x-init="$watch('darkMode', val => localStorage.setItem('dark', val))" x-bind:class="{ 'dark': darkMode }">
	<head>
		<meta charset="utf-8"/>
		<meta http-equiv="x-ua-compatible" content="ie=edge"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		{% hook "seomateMeta" %}
		{% if entry is defined and entry.seoHide %}
			<meta name="robots" content="noindex"/>
		{% endif %}
		<style>
			[x-cloak] {
				display: none;
			}
		</style>
		<link rel="stylesheet" href="{{ craft.vite.entry("app.css") }}"/>
		<link rel="stylesheet" href="{{ craft.vite.entry("flowbite.css") }}"/>
		{% include "_globals/favicons" %}
		{% include "_globals/fonts" %}
	</head>
	<body class="h-full font-sans text-base antialiased text-gray-900 bg-gray-100 dark:text-white dark:bg-gray-900">
		{% include "_globals/nav" %}
		{% block main %}{% endblock %}
		{% include "_globals/footer" %}
		{{ craft.vite.register("src/js/app.js") }}
		{% do sprig.registerScript %}
		<script src="{{ craft.vite.entry("flowbite.js") }}"></script>
	</body>
</html>{%- endblock -%}
